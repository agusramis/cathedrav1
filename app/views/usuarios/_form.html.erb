<%= form_for @usuario, :html => { :class => "form-horizontal center" } do |f| %>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :email, "Email:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control lowercase", maxlength: "150" %>
      <% if @usuario.errors[:email].present? %>
        <p class="text-danger"><%= @usuario.errors[:email].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :nombre_usuario, "Nombre de Usuario:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.text_field :nombre_usuario, class: "form-control",disabled: true %>
      <%# if @usuario.errors[:nombre_usuario].present? %>
<!--        <p class="text-danger"><%#= @usuario.errors[:nombre_usuario].join('. ') %></p>-->
      <%# end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :legajo, "Legajo:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.telephone_field :legajo, class: "form-control", maxlength: "8", onkeypress:"return event.charCode >= 48 && event.charCode <= 57" %>
      <% if @usuario.errors[:legajo].present? %>
        <p class="text-danger"><%= @usuario.errors[:legajo].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :nombre, "Nombre:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.text_field :nombre, class: "form-control capitalize", maxlength: "80" %>
      <% if @usuario.errors[:nombre].present? %>
        <p class="text-danger"><%= @usuario.errors[:nombre].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :apellido, "Apellido:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.text_field :apellido, class: "form-control capitalize", maxlength: "80" %>
      <% if @usuario.errors[:apellido].present? %>
        <p class="text-danger"><%= @usuario.errors[:apellido].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :telefono, "Teléfono:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.telephone_field :telefono, class: "form-control", maxlength: "20" %>
      <% if @usuario.errors[:telefono].present? %>
        <p class="text-danger"><%= @usuario.errors[:telefono].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :celular, "Celular:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.telephone_field :celular, class: "form-control", maxlength: "20" %>
      <% if @usuario.errors[:celular].present? %>
        <p class="text-danger"><%= @usuario.errors[:celular].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :dni, "DNI:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%#onkeypress fuerza a ingresar solamente numeros%>
      <%= f.telephone_field :dni, class: "form-control", maxlength: "8", onkeypress:"return event.charCode >= 48 && event.charCode <= 57" %>
      <% if @usuario.errors[:dni].present? %>
        <p class="text-danger"><%= @usuario.errors[:dni].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :descripcion, "Descripción:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.text_area :descripcion, class: "form-control", maxlength: "250" %>
      <% if @usuario.errors[:descripcion].present? %>
        <p class="text-danger"><%= @usuario.errors[:descripcion].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :fecha_nacimiento, "Fecha de nacimiento:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.date_field :fecha_nacimiento, class: "form-control" %>
      <% if @usuario.errors[:fecha_nacimiento].present? %>
        <p class="text-danger"><%= @usuario.errors[:fecha_nacimiento].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :nacionalidad, "Nacionalidad:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.text_field :nacionalidad, class: "form-control capitalize", maxlength: "100" %>
      <% if @usuario.errors[:nacionalidad].present? %>
        <p class="text-danger"><%= @usuario.errors[:nacionalidad].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :sexo, "Sexo:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.select :sexo, ['Masculino', 'Femenino'], { prompt: 'Seleccionar una opción' }, { class: "custom-select" } %>
      <% if @usuario.errors[:sexo].present? %>
        <p class="text-danger"><%= @usuario.errors[:sexo].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :rol_id, "Rol:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.select :rol_id, @roles_activos.pluck(:nombre, :id), { prompt: 'Seleccionar una opción' }, { class: "custom-select", id: "tipo_select" } %>
      <% if @usuario.errors[:rol_id].present? %>
        <p class="text-danger"><%= @usuario.errors[:rol_id].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :carrera_id, "Carrera:", class: "col-form-label" %><span class="text-danger"> *</span></div>
    <div class="col-sm-10">
      <%= f.select :carrera_id, @carreras_activas.pluck(:nombre, :id), { prompt: 'Seleccionar una opción.' }, { class: "custom-select", id: "carrera_select" } %>
      <% if @usuario.errors[:carrera_id].present? %>
        <p class="text-danger"><%= @usuario.errors[:carrera_id].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :direccion, "Dirección:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.text_field :direccion, class: "form-control capitalize", maxlength: "150" %>
      <% if @usuario.errors[:direccion].present? %>
        <p class="text-danger"><%= @usuario.errors[:direccion].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :localidad, "Localidad:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.text_field :localidad, class: "form-control capitalize", maxlength: "90" %>
      <% if @usuario.errors[:localidad].present? %>
        <p class="text-danger"><%= @usuario.errors[:localidad].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :provincia, "Provincia:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.text_field :provincia, class: "form-control capitalize", maxlength: "90" %>
      <% if @usuario.errors[:provincia].present? %>
        <p class="text-danger"><%= @usuario.errors[:provincia].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :pais, "Pais:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <%= f.text_field :pais, class: "form-control capitalize", maxlength: "90" %>
      <% if @usuario.errors[:pais].present? %>
        <p class="text-danger"><%= @usuario.errors[:pais].join('. ') %></p>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :fecha_baja, "Fecha Baja:", class: "col-form-label" %></div>
    <div class="col-sm-10">
      <% if @usuario.fecha_baja.nil? %>
        <div class="col-form-label"> -</div>
      <% else %>
        <div class="col-form-label"><%= @usuario.fecha_baja %></div>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-4 col-sm-offset-2">
      <%= button_tag 'Cancelar', class: "btn btn-secondary btn-sm", type: "submit", name: "cancel", value: true %>
      <%= f.submit "Guardar", class: "btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>
