<div class="block-center mt-4 wd-xl">
  <%#START card%>
  <div class="card card-flat">
    <div class="card-header text-center bg-dark">
      <a href="#">
        <img class="block-center rounded" src="<%= image_path('site/logo.png') %>" alt="Image"/>
      </a>
    </div>
    <div class="card-body">
      <p class="text-center py-2">Ingresar a Cathedra.</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-3' }) do |f| %>
        <%#= f.error_notification %>
        <% flash.each do |key, value| %>
          <% if key == "alert" %>
            <div class="alert alert-danger alert-dismissible animated shake">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <strong> <%= value %></strong>
            </div>
          <% end %>
          <% if key == "notice" %>
            <div class="alert alert-green alert-dismissible animated shake">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <strong> <%= value %></strong>
            </div>
          <% end %>
        <% end %>
        <div class="form-group">
          <div class="input-group with-focus">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border-right-0', placeholder: 'Correo Electronico', required: true %>
            <div class="input-group-append">
                     <span class="input-group-text text-muted bg-transparent border-left-0">
                         <em class="fa fa-envelope"></em>
                     </span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group with-focus">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control border-right-0', placeholder: 'Contraseña', required: true %>
            <div class="input-group-append">
                     <span class="input-group-text text-muted bg-transparent border-left-0">
                         <em class="fa fa-lock"></em>
                     </span>
            </div>
          </div>
        </div>
        <div class="clearfix">
          <div class="float-right">
            <a class="text-muted" href="<%= new_usuario_password_path %>">Recuperar Contraseña</a>
          </div>
        </div>
        <button class="btn btn-block btn-primary mt-3" type="submit">Iniciar Sesión</button>
      <% end %>
    </div>
  </div>
</div>